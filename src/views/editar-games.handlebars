<!DOCTYPE html>
<html>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="navbar-toggler-icon"></span>
    </button> <a class="navbar-brand" href="/index">BaianorStore</a>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/graficos">Estatística de Jogadores <span class="sr-only">(current)</span></a>
        </li>
      </ul>
      <ul class="navbar-nav ml-md-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/biblioteca">Biblioteca <span class="sr-only">(current)</span></a>
        </li>
        <li class="navbar-nav ml-md-auto">
          <a class="btn btn-danger" href="/logout" id="" data-toggle="dropdown">Logout</a>
        </li>
      </ul>
    </div>
  </nav>
  <br>
  <div class="container">
    <form action="/api/games/{{game._id}}">
      <input type="hidden" name="_id" value="{{game._id}}">

      <div class="form-group">
        <label for="titulo">Titulo:</label>
        <input type="nome" class="form-control" value="{{game.titulo}}" id="titulo" placeholder="Digite o titulo."
          name="titulo">
      </div>
      <div class="form-group">
        <label for="preco">Preço</label>
        <input type="number" class="form-control" value="{{game.preco}}" id="preco" placeholder="Digite o preco"
          name="preco">
      </div>
      <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" class="form-control" value="{{game.descricao}}" id="descricao"
          placeholder="Digite a descrição" name="descricao">
      </div>
      <div class="form-group">
        <label for="vendas">Descrição</label>
        <input type="text" class="form-control" value="{{game.vendas}}" id="vendas" placeholder="Digite as vendas"
          name="vendas">
      </div>
      <button type="submit" class="btn btn-success">Gravar</button>
      <a href="/index" title="Voltar" class="btn btn-primary">Voltar</a>
    </form>
  </div>
</body>
<script src="https://code.jquery.com/jquery-1.9.1.js"></script>
<script>
  $('form').submit(function (e) {
    e.preventDefault();
    var actionSubmitForm = $(this).attr('action');
    var dadosDoFormulario = $(this).serialize();
    $.ajax({
      url: actionSubmitForm,
      data: dadosDoFormulario,
      type: 'PUT',
      success: function (data) {
        alert('Alterado');
      }
    })
  });
</script>

</html>